<Page x:Class="CharuEval.MCQPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="MCQPage" Background="#f4f9ff">

    <Grid Margin="30">
        <!-- Navigation Arrow (Top Left) -->

        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="#c5d9ff" BorderThickness="1">
            <StackPanel>

                <Button x:Name="BackButton"
                    Width="40" Height="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="10"
                    Click="BackButton_Click"
                    Background="#3f51b5"
                    BorderBrush="#3f51b5"
                    ToolTip="Back to Questions"
                    Cursor="Hand"
                    BorderThickness="0" RenderTransformOrigin="0.758,0.492">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Ellipse Fill="{TemplateBinding Background}"/>
                                <Path Data="M 20,10 L 10,20 L 20,30"
                                    Stroke="White"
                                    StrokeThickness="4"
                                    StrokeStartLineCap="Round"
                                    StrokeEndLineCap="Round"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top" RenderTransformOrigin="1.258,0.531" Margin="4,0,0,0"/>
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Label x:Name="TimerLabel" FontSize="14" Foreground="Red" HorizontalAlignment="Right"/>


                <!-- Question Heading -->
                <TextBlock Text="Question 3: Database Fundamentals" 
                           FontSize="16" FontWeight="Bold" Foreground="#333"/>

                <!-- Question Text -->
                <TextBlock Text="Which of the following is a valid SQL statement to retrieve all rows from a table called 'students'?"
                           TextWrapping="Wrap" Margin="0,10" FontSize="14"/>

                <!-- MCQ Options -->
                <StackPanel Margin="0,10">
                    <RadioButton GroupName="mcq" Content="SELECT * FROM students;" FontSize="13" Margin="0,5"/>
                    <RadioButton GroupName="mcq" Content="GET ALL students;" FontSize="13" Margin="0,5"/>
                    <RadioButton GroupName="mcq" Content="RETRIEVE * FROM students;" FontSize="13" Margin="0,5"/>
                    <RadioButton GroupName="mcq" Content="SHOW * students;" FontSize="13" Margin="0,5"/>
                </StackPanel>

                <!-- Marks -->
                <TextBlock Text="Marks: 5" FontSize="12" Foreground="Gray" Margin="0,5"/>

                <!-- Next Button -->
                <Button Content="Next" Height="40" Background="#3f51b5" Foreground="White"
                        FontWeight="Bold" Margin="0,15,0,0" Click="Next_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

