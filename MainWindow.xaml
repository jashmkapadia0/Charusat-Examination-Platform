<Window x:Class="CharuEval.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CharuEval"
        Title="Charusat Examination Environment"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#e8f2fb">


    <Grid>
        <Border Background="White" CornerRadius="12" Padding="20" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                    <!-- ❌ Close Button -->
                    <local:CloseButtonControl />
                    <!-- Logo Icon -->

                    <!-- Title -->
                    <!-- Logo Icon -->

                    <!-- Title -->
                    <!-- Logo Icon -->
                    <Image Source="images/logo.png"
                    Width="80" Height="80" HorizontalAlignment="Center" Margin="0,20"/>
                    

                    <!-- Title -->
                    <TextBlock Text="Charusat Examination Environment" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="#1A1A1A" TextAlignment="Center"
                               TextWrapping="Wrap" Margin="0,10,0,2"/>

                    <TextBlock Text="A secure online examination platform" 
                               FontSize="12" Foreground="Gray" TextAlignment="Center"
                               TextWrapping="Wrap" Margin="0,0,0,15"/>

                    <!-- Portal Toggle Buttons -->
                    <ComboBox x:Name="RoleSelector" Width="200">
                        <ComboBoxItem Content="Student" IsSelected="True"/>
                        <ComboBoxItem Content="Teacher"/>
                    </ComboBox>


                    <!-- Google Sign-in Box -->
                    <Border Background="#f5f5f5" CornerRadius="6" Padding="10" Margin="0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Ellipse Width="24" Height="24" Fill="Green" Margin="0,0,5,0"/>
                            <TextBlock Text="Sign in as 23AIML001" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- OR divider -->
                    <TextBlock Text="OR SIGN IN WITH UNIVERSITY ID" FontSize="11" Foreground="Gray" 
                               Margin="0,15,0,5" TextAlignment="Center"/>

                    <!-- Email Input -->
                    <TextBox x:Name="EmailBox"
                             Margin="0,5" Padding="10" Height="35"
                             Text="e.g., 21dcs001@charusat.edu.in" Foreground="Gray"/>

                    <!-- Password Input -->
                    <PasswordBox x:Name="PasswordBox" Margin="0,5" Padding="10" Height="35"/>

                    <!-- Sign In Button -->
                    <Button Content="Sign In" 
                            Background="#3f51b5" Foreground="White" 
                            FontWeight="Bold" Margin="0,15,0,0" Padding="10"
                            Height="40" BorderBrush="#3f51b5" Click="SignIn_Click"/>

                    <!-- Sign Up Button -->
                    <Button Content="New User? Sign Up"
                    Background="Transparent" Foreground="#3f51b5"
                    FontWeight="SemiBold" BorderBrush="Transparent"
                     Margin="0,10,0,0" Click="SignUp_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>

