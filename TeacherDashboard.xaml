<Page x:Class="CharuEval.TeacherDashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CharuEval"
      Title="TeacherDashboard" Background="#f4f9ff">

    <Grid Margin="20">
        <!-- Layered Layout -->
        <Grid>
            <!-- ❌ Close Button -->
            <local:CloseButtonControl />

            <!-- Main Dashboard -->
            <StackPanel Margin="0,50,0,0">
                <!-- Header -->
                <TextBlock Text="👨‍🏫 Welcome, Jash (Faculty)" 
                           FontSize="20" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20"/>

                <!-- Create Exam Button -->
                <Button Content="➕ Create New Exam" Width="180" Height="40" 
                        Background="#3f51b5" Foreground="White" FontWeight="Bold"
                        Click="CreateExam_Click"/>

                <!-- Exam List Header -->
                <TextBlock Text="Your Exams:" FontSize="16" FontWeight="SemiBold" Margin="0,20,0,10"/>

                <!-- Exam List -->
                <DataGrid x:Name="ExamDataGrid" AutoGenerateColumns="False" Height="300"
                          HeadersVisibility="Column" CanUserAddRows="False" Margin="0,0,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="80"/>
                        <DataGridTextColumn Header="Subject" Binding="{Binding Subject}" Width="200"/>
                        <DataGridTextColumn Header="Questions" Binding="{Binding QuestionCount}" Width="100"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="View" Width="50" Margin="5"/>
                                        <Button Content="Edit" Width="50" Margin="5"/>
                                        <Button Content="Submissions" Width="80" Margin="5"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

