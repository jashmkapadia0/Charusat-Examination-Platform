<Page x:Class="CharuEval.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:CharuEval.Pages"
      Background="#e8f2fb">

    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Background="White" Padding="20" CornerRadius="10">
            <StackPanel>
                <TextBlock Text="Create Account" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" TextAlignment="Center"/>

                <TextBlock Text="Email" />
                <TextBox x:Name="EmailBox" Margin="0,5" Height="30"/>

                <TextBlock Text="Password" />
                <PasswordBox x:Name="PasswordBox" Margin="0,5" Height="30"/>

                <TextBlock Text="Confirm Password" />
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,5" Height="30"/>

                <Button Content="Create Account"
                        Background="#3f51b5" Foreground="White"
                        FontWeight="Bold" Margin="0,20,0,0" Height="35"
                        Click="CreateAccount_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>


