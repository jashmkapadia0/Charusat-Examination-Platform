<Page x:Class="CharuEval.ExamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ExamPage" Background="#f4f9ff">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">

            <!-- Exam Info -->
            <TextBlock Text="Exam Code: EXM12345" FontSize="16" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Subject: Data Structures" FontSize="14" Margin="0,2,0,20" Foreground="#555"/>

            <!-- Timer Label -->
            <Label x:Name="TimerLabel"
                   FontSize="14"
                   FontWeight="Bold"
                   Foreground="Red"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,10"/>

            <!-- Question 1: MCQ -->
            <Button Click="OpenMCQ" Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand">
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#c5d9ff" BorderThickness="1" Width="571">
                    <StackPanel>
                        <TextBlock Text="Question 1: SQL Statement" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Which of the following is a valid SQL statement to retrieve all rows from a table called 'students'?"
                                   TextWrapping="Wrap" Margin="0,5"/>
                        <TextBlock Text="Marks: 5" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Question 2: Text Answer -->
            <Button Click="OpenTextQuestion" Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand">
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#c5d9ff" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Question 2: Stack using Arrays" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Write a C++ class to implement a stack using arrays. Include push, pop, isEmpty, and display functions."
                                   TextWrapping="Wrap" Margin="0,5"/>
                        <TextBlock Text="Marks: 10" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Question 3: Code -->
            <Button Click="OpenCodeQuestion" Background="Transparent" BorderBrush="{x:Null}" Cursor="Hand">
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,0,15" BorderBrush="#c5d9ff" BorderThickness="1" Width="563">
                    <StackPanel>
                        <TextBlock Text="Question 3: Factorial Program" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Write a program that calculates the factorial of a number using recursion."
                                   TextWrapping="Wrap" Margin="0,5"/>
                        <TextBlock Text="Marks: 10" FontSize="12" Foreground="Gray"/>
                    </StackPanel>
                </Border>
            </Button>

            <!-- Finish Exam Button -->
            <Button Content="Finish Exam"
                    Click="FinishExam_Click"
                    Background="#4A90E2"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Padding="10"
                    Margin="0,20,0,0"
                    BorderBrush="#4A90E2"
                    Width="200"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    BorderThickness="1">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </ScrollViewer>
</Page>


